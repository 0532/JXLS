<?xml version="1.0" encoding="ISO-8859-1"?>
<workbook>
    <worksheet name="Sheet1">
        <section startRow="0" endRow="0"/>
        <loop startRow="1" endRow="1" items="employees" var="employee" varType="net.sf.jxls.reader.sample.Employee">
            <section startRow="1" endRow="1">
                <mapping cell="A2">employee.name</mapping>
                <mapping cell="B2">employee.age</mapping>
                <mapping cell="C2">employee.payment</mapping>
            </section>
            <loopbreakcondition>
                <rowcheck offset="0">
                    <cellcheck offset="0"/>
                </rowcheck>
            </loopbreakcondition>
        </loop>
        <section startRow="2" endRow="3">
            <mapping cell="C3">bean.intValue1</mapping>
            <mapping cell="C4">bean.doubleValue</mapping>
            <mapping cell="C5">bean.str</mapping>
        </section>
    </worksheet>
</workbook>